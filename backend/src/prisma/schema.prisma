generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  passwordHash String       @map("password_hash")
  name         String
  createdAt    DateTime     @default(now()) @map("created_at")

  dailyLogs    DailyLog[]
  bodyMetrics  BodyMetric[]
  goals        Goal[]

  @@map("users")
}

model DailyLog {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date
  weightKg  Float?   @map("weight_kg")
  wakeTime  String?  @map("wake_time")
  sleepTime String?  @map("sleep_time")
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user        User         @relation(fields: [userId], references: [id])
  meals       Meal[]
  workouts    Workout[]
  supplements Supplement[]

  @@unique([userId, date])
  @@index([date])
  @@map("daily_logs")
}

model Meal {
  id         String   @id @default(uuid())
  dailyLogId String   @map("daily_log_id")
  mealType   String   @map("meal_type") // breakfast, lunch, dinner, snack
  name       String
  calories   Float?
  proteinG   Float?   @map("protein_g")
  carbsG     Float?   @map("carbs_g")
  fatG       Float?   @map("fat_g")
  fibreG     Float?   @map("fibre_g")
  photoUrl   String?  @map("photo_url")
  notes      String?
  isTemplate Boolean  @default(false) @map("is_template")
  templateName String? @map("template_name")
  createdAt  DateTime @default(now()) @map("created_at")

  dailyLog   DailyLog        @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)
  components MealComponent[]

  @@map("meals")
}

model MealComponent {
  id        String   @id @default(uuid())
  mealId    String   @map("meal_id")
  name      String
  weightG   Float?   @map("weight_g")
  calories  Float?
  proteinG  Float?   @map("protein_g")
  carbsG    Float?   @map("carbs_g")
  fatG      Float?   @map("fat_g")
  createdAt DateTime @default(now()) @map("created_at")

  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@map("meal_components")
}

model Workout {
  id             String   @id @default(uuid())
  dailyLogId     String   @map("daily_log_id")
  type           String   // walk, strength, cardio
  startTime      String?  @map("start_time")
  endTime        String?  @map("end_time")
  durationMins   Int?     @map("duration_mins")
  activeCalories Float?   @map("active_calories")
  totalCalories  Float?   @map("total_calories")
  avgHeartRate   Int?     @map("avg_heart_rate")
  maxHeartRate   Int?     @map("max_heart_rate")
  distanceKm     Float?   @map("distance_km")
  effortLevel    Int?     @map("effort_level") // 1-5
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at")

  dailyLog DailyLog @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)

  @@map("workouts")
}

model Supplement {
  id         String   @id @default(uuid())
  dailyLogId String   @map("daily_log_id")
  name       String   // creatine, magnesium, caffeine, whey, etc
  doseMg     Float?   @map("dose_mg")
  takenAt    String?  @map("taken_at")
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")

  dailyLog DailyLog @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)

  @@map("supplements")
}

model BodyMetric {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date
  weightKg  Float?   @map("weight_kg")
  notes     String?
  photoUrl  String?  @map("photo_url")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@index([userId, date])
  @@map("body_metrics")
}

model Goal {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  goalType    String   @map("goal_type") // weight, calories, protein, steps
  targetValue Float    @map("target_value")
  startDate   DateTime @map("start_date") @db.Date
  targetDate  DateTime @map("target_date") @db.Date
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("goals")
}

model MealTemplate {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  name       String
  mealType   String   @map("meal_type")
  calories   Float?
  proteinG   Float?   @map("protein_g")
  carbsG     Float?   @map("carbs_g")
  fatG       Float?   @map("fat_g")
  fibreG     Float?   @map("fibre_g")
  components Json?    // stored as JSON array
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("meal_templates")
}
